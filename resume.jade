html
    head
        title= locals.title
        link(href='public/style/serve.css', rel='stylesheet')
    body
        header.header
            include components/header
        .wrapper
            .leftnav.desktop-only
                include  components/leftnav
            .main
                .resume
                    h3 Resume
                        |[
                        a.resume-link(href="https://docs.google.com/document/d/1pfRbMab28jHi8G5SMI859t81Tea-t-9nwaLaW9DY-Do/edit?usp=sharing")
                            |PDF
                        |]
                    .resume-body
                        .skills
                            h4 Skills
                            ul
                                each skill in locals.expertise
                                    li= skill.technology
                                        if skill.associated.length
                                            ul
                                                each associated in skill.associated
                                                    li= associated
                        .experience
                            h4 Experience
                            ul
                                li
                                    span.company  Deepfueld
                                    span.type Software Engineer
                                    span.subtype Front End | React
                                    span.years 2017-Present
                                li
                                    span.company  Mountain Pass Solutions
                                    span.type Web Developer
                                    span.subtype Front End
                                    span.years 2016-2017
                                li
                                    span.company DotSignal
                                    span.type Web Developer
                                    span.subtype Full Stack
                                    span.years 2014-2016
                                li
                                    span.company Northwood University
                                    span.type PC Tech
                                    span.years 2012-2014
                                li
                                    span.company Dice Security
                                    span.type Developer
                                    span.years 2009-2011
        footer.footer
            include components/footer
    script(src="./public/script/serve.js")